# TTA Production Environment Configuration

# === Database Configuration ===
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# === Model Provider Configuration ===

# Primary provider (openrouter, local, byok_openai, byok_anthropic, byok_google)
PRIMARY_PROVIDER=openrouter
FALLBACK_PROVIDERS=local

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key

# Bring Your Own Key (BYOK) Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key

# Local Model Configuration
LOCAL_MODEL_ENDPOINT=http://localhost:11434
LOCAL_MODEL_TYPE=ollama

# === Cost Management ===
ENABLE_COST_TRACKING=true
MAX_DAILY_COST=10.0
PREFER_FREE_MODELS=true

# === Fallback Configuration ===
ENABLE_FALLBACK=true
MAX_RETRIES=3
RETRY_DELAY=1.0

# === Game Configuration ===
MAX_CORAG_ITERATIONS=5
DEFAULT_TEMPERATURE=0.7
DEBUG_MODE=false

# === Optional: Override Model Selection ===
# NARRATIVE_MODEL=anthropic/claude-3-haiku
# TOOLS_MODEL=openai/gpt-4o-mini
# REASONING_MODEL=google/gemini-pro
# CREATIVE_MODEL=anthropic/claude-3-sonnet

# === Optional: Override Model Parameters ===
# NARRATIVE_TEMPERATURE=0.8
# TOOLS_TEMPERATURE=0.1
# REASONING_TEMPERATURE=0.3
# CREATIVE_TEMPERATURE=0.9

# NARRATIVE_MAX_TOKENS=2048
